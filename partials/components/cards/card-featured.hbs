<article class="card card--featured">
  <div class="card__main flex direction-column">
    {{#if primary_tag}}
      <a href="{{primary_tag.url}}" class="card__tag card__tag--desktop">{{primary_tag.name}}</a>
    {{/if}}
    <h2 class="card__title">{{title}}</h2>
    {{#if excerpt}}
      <p class="card__description">{{excerpt}}</p>
    {{/if}}
    <div class="card__footer flex items-center space-between">
      {{#if primary_tag}}
        <a href="{{primary_tag.url}}" class="card__tag card__tag--mobile">{{primary_tag.name}}</a>
      {{/if}}
      <a href="{{url}}" class="card__link button button--primary">Read more</a>
      <div class="card__meta flex items-center">
        <span class="card__date">{{date format="MMM DD, YYYY"}}</span>
        {{#if reading_time}}
          <span class="bull"></span>
          <span class="card__reading-time">{{reading_time}}</span>
        {{/if}}
      </div>
    </div>
  </div>
  {{#if feature_image}}
    <a href="{{url}}" class="card__image">
      <img data-src="{{feature_image}}" class="lazyload" alt="{{title}}">
    </a>
  {{/if}}
</article>