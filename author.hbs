{{!< default}}

{{#author}}

<section class="author-info flex items-center space-between">
  <div class="author-info__main flex direction-column">
    <span class="author-info__small">Author</span>
    <h1 class="author-info__title">{{name}}</h1>
    {{#if bio}}
      <p class="author-info__bio">{{bio}}</p>
    {{/if}}
  </div>
  {{#if profile_image}}
    <img src="{{profile_image}}" class="author-info__image" alt="{{name}}">
  {{/if}}
</section>

{{>
  components/sections/cards-list
  scenario="author"
  class="cards-list--author-tag cards-list--separate"
  title=(concat name "'s articles")
  authorSlug=slug
  cardType='default'
  cardClass='card--default-smaller'
  limit='6'
  infiniteScroll='true'
}}

{{/author}}